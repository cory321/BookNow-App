<h1>Assistants</h1>
<hr class="m-t-0 m-b-md">


<% @assistants.in_groups_of(3, false).each do |group| %>
<div class="row">
	
	<% group.each do |assistant| %>
	<div class="col-md-4">
		<div class="thumbnail">
		  <!-- <img class="card-img-top" data-src="..." alt="Card image cap"> -->
		  <div class="card-block">
		    <h4 class="card-title"><span class="icon icon-user"> <%= assistant.first_name %> <%= assistant.last_name %></h4>
		    <p class="card-text">
			    <span class="icon icon-phone"> <%= assistant.phone %></span>
				<br>
				<span class="icon icon-email"> <%= assistant.email %></span>
				<br>
				<span class="icon icon-location-pin"> <%= assistant.city %></span>
			</p>
		    <a href="#" class="btn btn-sm btn-primary-outline">View</a>
		  </div>
		</div>
	</div>
	<% end %>

</div>
<% end %>