<h1>Packages</h1>
<hr class="m-t-0 m-b-md">


<% @packages.in_groups_of(3, false).each do |row| %>
<div class="row">
	
	<% row.each do |package| %>
	<div class="col-md-4">
		<div class="thumbnail">
		  <!-- <img class="card-img-top" data-src="..." alt="Card image cap"> -->
		  <div class="card-block">
		    <h4 class="card-title"><span class="icon icon-documents"> <%= package.title %></h4>
		    <p class="card-text">
		   	 Info
			</p>
		    <a href="#" class="btn btn-sm btn-primary-outline">View</a>
		  </div>
		</div>
	</div>
	<% end %>

</div>
<% end %>