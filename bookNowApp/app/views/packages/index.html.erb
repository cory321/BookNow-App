<% content_for :title, "Packages" %>

<h1>Packages</h1>
<hr class="m-t-0 m-b-md">

<!-- Packages and Contracts -->
<div class="row p-b">
	<div class="col-md-12">
		<%= link_to "Create A New Package", new_user_package_path %>
	</div>
</div>

<div class="row">
	<% if @packages.any? %>
		<% @packages.each do |package| %>
			<div class="col-md-4">
				<div class="thumbnail">
				  <!-- <img class="card-img-top" data-src="..." alt="Card image cap"> -->
				  <div class="card-block">
				    <h4 class="card-title"><span class="icon icon-documents"><%= package.name %></h4>
				    <p class="card-text">
				   	 Price: <%= package.price %>
					</p>
					
					<% if package.items.any? %>
					<ul>
						<% package.items.each do |item| %>
							<li><%= item.name %></li>
						<% end %>
					</ul>
					<% end %>

				    <a href="#" class="btn btn-sm btn-primary-outline">Edit</a>
				  </div>
				</div>
			</div>
		<% end %>
	<% else %>
	<div class="col-md-12">
		<h4>You have no packages. Create One!</h4>
	</div>
	<% end %>
</div>