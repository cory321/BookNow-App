<h2>Add New Package</h2>

<div class="row">
	<div class="col-lg-6">
		<%= form_for( [@user, @package], html:{class:"class", role:"form"}) do |f| %>
		<fieldset class="form-group">
			<%= f.text_field :name, class:"form-control", placeholder:"Package Name", :required => true %>
		</fieldset>
		<fieldset class="form-group">
			<%= f.text_field :price, class:"form-control", placeholder:"Package Price", :required => true %>
		</fieldset>
			<%= f.submit "Create", class:"btn btn-primary" %>
			<%= link_to "< Go Back", user_packages_path(current_user), class:"p-l" %>
		<% end %>
	</div>
</div>
