<div class="col-sm-offset-3">
  <div class="col-sm-7">
    <div class="well">
      <h2 class="text-center">Sign Up</h2><br>
      <%= form_for @user, url: signup_path do |f| %>
        <%= render partial: "shared/errors", locals:{instance: @user} %>
        <div class="form-group">
          <%= f.label :email, class:"control-label" %>
          <%= f.text_field :email, class:"form-control" , :required => true %>
        </div>

        <div class="form-group">
          <%= f.label :password, class:"control-label" %>
          <%= f.password_field :password, class:"form-control", :required => true  %>
        </div>

        <div class="form-group">
          <%= f.label :first_name, class:"control-label" %>
          <%= f.text_field :first_name, class:"form-control" , :required => true %>
        </div>

        <div class="form-group">
          <%= f.label :last_name, class:"control-label" %>
          <%= f.text_field :last_name, class:"form-control" , :required => true %>
        </div>

        <div class="form-group">
          <%= f.label :company_name, class:"control-label" %>
          <%= f.text_field :company_name, class:"form-control" , :required => true %>
        </div>

        <%= f.submit "Signup", id:"submit-user", class:"btn btn-block btn-success text-center" %>
      <% end %>
    </div>
  </div>
</div>
